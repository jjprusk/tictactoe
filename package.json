{
  "name": "tictactoe",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start:server": "npm --workspace server run dev",
    "start:client": "npm --workspace client run dev",
    "prepare": "husky",
    "test": "npm --workspace server run test",
    "test:watch": "npm --workspace server run test:watch",
    "test:cov": "npm --workspace server run test:cov"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7"
  }
}
