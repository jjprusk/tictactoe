{
  "name": "server",
  "private": true,
  "version": "0.1.0",
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "bash ../scripts/kill-port.sh ${SERVER_PORT:-3001} && ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src --ext .ts --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-trace-base": "^1.30.1",
    "@opentelemetry/sdk-trace-node": "^1.30.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "helmet": "^7.2.0",
    "mongodb": "^6.9.0",
    "pino": "^9.3.2",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.2.2",
    "prom-client": "^15.1.3",
    "redis": "^4.7.1",
    "socket.io": "^4.7.5",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@rollup/wasm-node": "^4.21.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "fast-check": "^3.13.0",
    "eslint": "^8.57.1",
    "rollup": "^4.46.2",
    "socket.io-client": "^4.7.5",
    "supertest": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0",
    "vitest": "^3.2.4"
  }
}
